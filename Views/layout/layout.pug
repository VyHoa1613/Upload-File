html
    head
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css')
        script(src='https://kit.fontawesome.com/db3f5c234a.js', crossorigin='anonymous')
    body
        style.
            .aa{
                margin-top: 13px;
                }
        nav.navbar.navbar-expand-lg.navbar-light.bg-dark
            a.navbar-brand(href='/') 
                image(src='/icon.png')
            button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
                span.navbar-toggler-icon
            .collapse.navbar-collapse
                ul.navbar-nav.mr-auto
                    li.nav-item.active
                        a.nav-link(href='/books') Home 
                    li.nav-item
                        a.nav-link(href='/users') Users
                    li.nav-item
                        a.nav-link(href='/transactions') Transactions
                    li.nav-item
                        a.nav-link(href='/cart')
                            i.fas.fa-cart-plus=items
            if user
                p=user.name
            

        .container.pt-5
            block content
            style.
                .main {
                    display: flex;
                    align-items: center;
                }
            .container.pt-5
                nav.main(aria-label='Page navigation example')
                ul.pagination
                    li.page-item
                        a.page-link(href='#') Previous
                    li.page-item
                        a.page-link(href='#') 1
                    li.page-item
                        a.page-link(href='#') 2
                    li.page-item
                        a.page-link(href='#') 3
                    li.page-item
                        a.page-link(href='#') Next
